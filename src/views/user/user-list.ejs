<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/buttons.css" />

    <title>Product Management</title>
  </head>
  <body>
    <h3 style="text-align: center; font-size: 5rem; font-style: italic">
      Product List
    </h3>
    <div class="container-fluid">
      <a href="/create"
        ><button class="button-34" role="button">Create User</button></a
      >
      <table class="table table-success table-striped" style="border: 1px;">
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Avatar</th>
          <th colspan="3">Action</th>
        </tr>
        <% for(let i = 0; i < users.length; i++) { %>
        <tr>
          <td><%= i + 1 %></td>
          <td><%= users[i].name %></td>
          <td>
            <img src="<%= users[i].avatar %>" width="150px" height="150px" />
          </td>
          <td>
            <a href="/user/details/<%= users[i].id%>"
              ><button type="button" class="btn btn-info">Details</button></a
            >
          </td>
          <td>
            
            <a href="/update/<%= users[i].id%>"
              ><button class="button1">Update</button></a
            >
          </td>
          
          <td>
            <a href="/delete/<%= users[i].id%>"
              ><button class="button-62" role="button">Delete</button></a
            >
          </td>
        </tr>
        <% } %>
      </table>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
