<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Management</title>
</head>
<body>
    <h3>Product List</h3>
    <a href="/create"><button type="button">Create User</button></a>
    <table>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Avatar</th>
            <th colspan="3">Action</th>
        </tr>
        <% for(let i = 0; i < users.length; i++) { %>
            <tr>
                <td><%= i + 1 %> </td>
                <td><%= users[i].name %> </td>
                <td><img src="<%= users[i].avatar %>"  width='150px' height='150px'></td>
                <td><a href="/user/details/<%= users[i].id%>"><button>Details</button></a></td>
                <td><a href="/update/<%= users[i].id%>"><button>Update</button></a></td>
                <td><a href="/delete/<%= users[i].id%>"><button>Delete</button></a></td>
            </tr>
        <% } %>
    </table>
</body>
</html>